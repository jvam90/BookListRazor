@page
@model BookListRazor.Pages.BookList.IndexModel

<div class="container p-0 m-0">
    <div class="row">
        <div class="col-9">
            <h2 class="text-info">Book List</h2>
        </div>
        <div class="col-3">
            <a class="btn btn-info form-control text-white" asp-page="Create">Create New Book</a>
        </div>
    </div>

    <div class="row">
        <div class="col-12 border p-3 mt-3">
            <form method="post">
                @{
                    if (Model.Books.Count() > 0)
                    {
                        <table id="teste" class="table table-striped border">
                            <thead>
                                <tr class="table-secondary">
                                    <th>
                                        <label>Name</label>
                                    </th>
                                    <th>
                                        <label>Authors</label>
                                    </th>
                                    <th>
                                        <label>ISBN</label>
                                    </th>
                                    <th>

                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Books)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(m => item.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(m => item.Author)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(m => item.ISBN)
                                        </td>
                                        <td>
                                            <button asp-page-handler="Delete" asp-route-id="@item.Id" onclick="return confirm('Are you sure you want to delete?')" class="btn btn-sm btn-danger">Delete</button>
                                            <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-success text-white">Edit</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p>No Books Available</p>
                    }
                }
            </form>
        </div>
    </div>

    <div class="row">
        <div class="col-12" style="text-align:center">
            <span class="text-info">OR</span>
        </div>
    </div>
    <div class="row">
        <div class="col-12 border p-3">
            <table id="dtload" class="table table-striped table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Author</th>
                        <th>ISBN</th>
                        <th></th>
                    </tr>
                </thead>

            </table>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/js/booklist.js"></script>
}

